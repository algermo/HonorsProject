<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_three_board"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backrepeat"
    tools:context="algermo.honorsproject.ThreeByThreeGame">

    <View
        android:id="@+id/menuback"
        android:layout_width="325dp"
        android:layout_height="310dp"
        android:background="@drawable/menubg"
        android:alpha=".5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <View
        android:id="@+id/labelback"
        android:layout_width="325dp"
        android:layout_height="150dp"
        android:background="@drawable/menubg"
        android:alpha=".5"
        android:layout_below="@+id/menuback"
        android:layout_alignLeft="@+id/menuback"
        android:layout_alignStart="@+id/menuback"
        android:layout_marginTop="25dp" />

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="3"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:id="@+id/gridLayout">

        <Button android:text=""
            android:id="@+id/button0"
            android:layout_width="100dp"
            android:layout_height="91dp" />
        <Button android:text=""
            android:id="@+id/button1"
            android:layout_width="100dp"
            android:layout_height="91dp" />
        <Button android:text=""
            android:id="@+id/button2"
            android:layout_height="91dp"
            android:layout_width="100dp" />
        <Button android:text=""
            android:id="@+id/button3"
            android:layout_width="100dp"
            android:layout_height="91dp" />
        <Button android:text=""
            android:id="@+id/button4"
            android:layout_width="100dp"
            android:layout_height="91dp" />
        <Button android:text=""
            android:id="@+id/button5"
            android:layout_width="100dp"
            android:layout_height="91dp" />
        <Button android:text=""
            android:id="@+id/button6"
            android:layout_width="100dp"
            android:layout_height="91dp" />
        <Button android:text=""
            android:id="@+id/button7"
            android:layout_width="100dp"
            android:layout_height="91dp" />
        <Button android:text=""
            android:id="@+id/button8"
            android:layout_width="100dp"
            android:layout_height="91dp" />

    </GridLayout>

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="360dp"
        android:id="@+id/spotsLeft"
        android:textColor="#ffffff"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:columnCount="2"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="450dp"
        android:id="@+id/gridLayout2">

        <Button
            android:text="Check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/check"
            android:layout_marginBottom="15dp"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/spotsLeft"
            android:layout_alignEnd="@+id/spotsLeft" />

        <Button
            android:text="Reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/reset"
            android:layout_below="@+id/spotsLeft"
            android:layout_toRightOf="@+id/spotsLeft"
            android:layout_toEndOf="@+id/spotsLeft" />

    </GridLayout>


</RelativeLayout>


