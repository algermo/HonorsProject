<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_three_board"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backrepeat"
    tools:context="algermo.honorsproject.HowToPlay">

    <ImageView
    android:id="@+id/menuback"
    android:layout_width="500dp"
    android:layout_height="match_parent"
    android:background="@drawable/menubg"
    android:alpha=".5"
    android:layout_centerHorizontal="true" />

    <ScrollView
        android:layout_width="490dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="-180dp"
            android:layout_gravity="center"
            android:layout_marginBottom="-150dp"
            android:src="@drawable/title"/>

        <TextView
            android:text="How to Play"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="10dp"
            android:textSize="50dp"
            android:textColor="#ffffff"
            android:typeface="sans"
            android:id="@+id/textView1" />


        <TextView
            android:text="It's the first day on the job for a new fire department. They get their first call - a field is on fire and the firefighters need to put the fire out and stop it from spreading! \n\nThe only problem is, it's everyone's first day! So, it's your job to help out the firefighters and tell them where to stand."
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:typeface="serif"
            android:textColor="#ffffff"/>

        <TextView
            android:text="\nWait a minute though, there are a few rules for where the firefighters can stand:"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:typeface="serif"
            android:textColor="#ffffff"/>

        <TextView
            android:text="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:textSize="50dp"
            android:textColor="#ffffff"
            android:typeface="sans"
            android:id="@+id/textView2" />

        <TextView
            android:text="Firefighters can't stand in fire!"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:typeface="serif"
            android:textColor="#ffffff"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-0dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/fire"
            android:layout_below="@+id/fireimg"/>

        <TextView
            android:text="2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:textSize="50dp"
            android:textColor="#ffffff"
            android:typeface="sans"
            android:id="@+id/textView3" />

        <TextView
            android:text="In order to put the fire out AND keep the fire from spreading, the entire field needs to be sprayed with water. Firefighters spray everywhere in their row and column. "
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:typeface="serif"
            android:textColor="#ffffff"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:src="@drawable/firehat" />

        <TextView
            android:text="3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:textSize="50dp"
            android:textColor="#ffffff"
            android:typeface="sans"
            android:id="@+id/textView4" />

        <TextView
            android:text="Firefighters can't stand where they might be sprayed with water by someone else. So, that means there needs to be exactly one firefighter in every row and every column."
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:typeface="serif"
            android:textColor="#ffffff"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="-190dp"
            android:layout_marginBottom="-160dp"
            android:src="@drawable/example1" />

        <TextView
            android:text="4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="10dp"
            android:textSize="50dp"
            android:textColor="#ffffff"
            android:typeface="sans"
            android:id="@+id/textView5" />

        <TextView
            android:text="Lastly, there is sometimes more than one way to place the firefighters. Try to find all of the ways they can stand! "
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="20dp"
            android:typeface="serif"
            android:textColor="#ffffff"/>

        <TextView
            android:text="\nGame concept adapted from Dakota Doster and Dr. Feryal Alayont.
             \nGame developed by Molly Alger and Jennifer Moon.
             \nGraphics and music provided by Anson Pavlov.
             \n"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp"
            android:textSize="10dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/textView6"
            android:layout_below="@+id/textView"
            android:layout_centerHorizontal="true"
            android:textAlignment="center"
            android:layout_centerVertical="true"
            android:layout_marginBottom="0dp"
            android:gravity="center"
            android:textColor="#ffffff"/>

    </LinearLayout>
    </ScrollView>
</RelativeLayout>

