<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_home_page"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/backrepeat"
    tools:context="algermo.honorsproject.HomePage">

    <Button
        android:text="How to Play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:id="@+id/btnhowtoplay"
        android:layout_below="@+id/button4by4"
        android:layout_alignLeft="@+id/button4by4"
        android:layout_alignStart="@+id/button4by4" />

    <Button
        android:text="Medium Field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button4by4"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/button3by3"
        android:layout_centerHorizontal="true" />

    <View
        android:id="@+id/menuback"
        android:layout_width="200dp"
        android:layout_height="220dp"
        android:background="@drawable/menubg"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:alpha=".5"/>

    <Button
        android:text="Small Field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/button3by3"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/btnhowtoplay"
        android:layout_alignEnd="@+id/btnhowtoplay"
        android:layout_marginTop="13dp" />

</RelativeLayout>


